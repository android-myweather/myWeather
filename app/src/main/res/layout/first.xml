<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/f_select_city_title"
        android:layout_width="fill_parent"
        android:layout_height="45.0dp"
        android:background="#ffcd2626" >

        <TextView
            android:id="@+id/f_select_city"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:gravity="center_vertical"
            android:paddingLeft="5dp"
            android:text="选择城市"
            android:layout_marginLeft="10dp"
            android:textColor="#ffffff"
            android:textSize="22.0sp" />

        <ImageView
            android:id="@+id/f_title_location"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:gravity="center"
            android:src="@drawable/base_action_bar_action_city" />

    </RelativeLayout>
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@id/f_select_city_title">
        <EditText
            android:id="@+id/f_search_edit"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:hint="搜索全国城市（中⽂） "
            android:layout_margin="10.0dip"
            android:drawableLeft=
                "@drawable/magnifying_glass"
            android:drawablePadding="8.0dip"
            android:paddingBottom="8.0dip"
            android:paddingLeft="10.0dip"
            android:paddingRight="30.0dip"
            android:paddingTop="8.0dip"
            android:singleLine="true"
            android:background
                ="@drawable/contact_search_box_edittext_keyword_background"
            android:textColor="#ff000000"
            android:textColorHint="#ffcccccc"
            android:textSize="15.0sp"
            />
        <ListView
            android:layout_below="@id/f_search_edit"
            android:id="@+id/f_city_list"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

        </ListView>

    </RelativeLayout>

</RelativeLayout>
